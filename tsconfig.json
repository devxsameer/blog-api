{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./",
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["tests/*"]
    },

    "sourceMap": true,

    "strict": true,
    "noImplicitAny": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src", "tests"]
}
