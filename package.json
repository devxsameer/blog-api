{
  "name": "blog-api",
  "version": "1.0.0",
  "description": "A modern, production-style REST API for a Markdown-based blogging platform.",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "NODE_ENV=production node dist/server.js",
    "db:generate": "tsx ./node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "tsx ./node_modules/drizzle-kit/bin.cjs migrate",
    "db:push": "tsx ./node_modules/drizzle-kit/bin.cjs push",
    "db:studio": "tsx ./node_modules/drizzle-kit/bin.cjs studio",
    "db:check": "tsx ./node_modules/drizzle-kit/bin.cjs check"
  },
  "keywords": [],
  "author": "Sameer Ali",
  "license": "ISC",
  "packageManager": "pnpm@10.25.0+sha512.5e82639027af37cf832061bcc6d639c219634488e0f2baebe785028a793de7b525ffcd3f7ff574f5e9860654e098fe852ba8ac5dd5cefe1767d23a020a92f501",
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "drizzle-kit": "^0.31.8",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/pg": "^8.16.0",
    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "nanoid": "^5.1.6",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.2.1"
  }
}
